    <title>About</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Poppins", sans-serif;
            transition: background 0.4s ease, color 0.4s ease;
        }

        body.light {
            background: #f8f3f6;
            color: #4a3b3b;
        }

        body.dark {
            background: #1a1416;
            color: #f2e6ea;
        }

        /* HEADER */
        .header {
            padding: 20px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #ffffffcc;
            backdrop-filter: blur(6px);
        }

        body.dark .header {
            background: #2a1f22cc;
        }

        .logo {
            font-size: 1.7rem;
            font-weight: 600;
            color: #c06c84;
        }

        .nav a {
            margin-left: 25px;
            text-decoration: none;
            color: inherit;
            font-weight: 500;
        }

        .nav a:hover {
            color: #c06c84;
        }

        .theme-btn {
            padding: 8px 18px;
            border-radius: 25px;
            border: 1px solid currentColor;
            background: transparent;
            cursor: pointer;
        }

        /* HERO */
        .hero {
            height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #fce4ec, #f8bbd0, #f48fb1);
            text-align: center;
            padding: 20px;
        }

        body.dark .hero {
            background: linear-gradient(135deg, #3a2a2f, #5a3f46, #7a5560);
        }

        .hero-title {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .hero-text {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .btn {
            padding: 14px 32px;
            background: #c06c84;
            color: white;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            display: inline-block;
            margin: 10px;
        }

        .btn:hover {
            background: #a85a72;
        }

        /* ABOUT */
        .about {
            padding: 80px 10%;
            display: flex;
            gap: 50px;
            align-items: center;
        }

        .about h2 {
            color: #c06c84;
            margin-bottom: 20px;
        }

        /* LOISIRS */
        .loisirs {
            padding: 80px 10%;
            text-align: center;
        }

        .loisirs h2 {
            color: #c06c84;
            margin-bottom: 40px;
        }

        .loisirs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
        }

        .loisir-card {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .loisir-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .loisir-card p {
            padding: 15px;
            font-weight: 500;
        }

        @media (max-width: 900px) {
            .about {
                flex-direction: column;
                text-align: center;
            }
        }
        
footer {
    padding: 30px 10%;
    text-align: center;
    font-size: 0.9rem;
    border-top: 1px solid #e0c3cc;
}

body.dark footer {
    border-top: 1px solid #5a3f46;
}
/* RÉSEAUX SOCIAUX FOOTER */
.footer-socials {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    gap: 18px;
}

.footer-socials a {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: #c06c84;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    font-size: 18px;
    transition: 0.3s;
}

.footer-socials a:hover {
    background: #a85a72;
    transform: translateY(-4px);
}

body.dark .footer-socials a {
    background: #7a5560;
}

