  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: system-ui, sans-serif;
      background: #050505;
      color: #ffffff;
      transition: background 0.6s ease, color 0.6s ease;
    }

    /* ===== HEADER ===== */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 4vw;
      position: sticky;
      top: 0;
      background: rgba(0,0,0,0.6);
      backdrop-filter: blur(10px);
      z-index: 1000;
    }

    .nav {
      display: flex;
      gap: 2rem;
      text-transform: uppercase;
      font-size: 0.9rem;
      letter-spacing: 0.12em;
    }

    .nav a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    .nav a:hover {
      color: #ffb3b3;
      transform: translateY(-2px);
    }

    #theme-toggle {
      background: transparent;
      border: 1px solid #fff;
      color: #fff;
      padding: 0.5rem 1.2rem;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    #theme-toggle:hover {
      background: #fff;
      color: #000;
    }

    /* ===== HERO ===== */
    .hero-section {
      position: relative;
      min-height: 70vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 4rem 2rem;
      background: linear-gradient(120deg, #b31217, #000000);
      overflow: hidden;
    }

    .hero-section::before {
      content: "";
      position: absolute;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(255,75,75,0.45), transparent 70%);
      top: -200px;
      left: -200px;
      animation: float 10s infinite alternate ease-in-out;
    }

    @keyframes float {
      from { transform: translate(0,0); }
      to { transform: translate(80px, 60px); }
    }

    .hero-section h1 {
      font-size: clamp(2.8rem, 6vw, 4.5rem);
      font-weight: 900;
      letter-spacing: 4px;
      margin-bottom: 1.5rem;
      z-index: 1;
      animation: fadeUp 1s ease-out;
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .hero-buttons {
      display: flex;
      gap: 20px;
      z-index: 1;
    }

    .hero-buttons a {
      padding: 14px 36px;
      border-radius: 40px;
      text-decoration: none;
      font-weight: 600;
      letter-spacing: 1px;
      color: #fff;
      border: 2px solid #fff;
      transition: all 0.35s ease;
    }

    .hero-buttons a.primary {
      background: #ff4b4b;
      border-color: #ff4b4b;
    }

    .hero-buttons a:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.4);
    }

    /* ===== SECTIONS ===== */
    .info-section {
      padding: 4rem 2rem;
      background: #1a1a1a;
    }

    .section-title {
      text-align: center;
      font-size: 2.4rem;
      margin-bottom: 3rem;
      font-weight: 800;
      background: linear-gradient(90deg, #ff4b4b, #ffb3b3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    .info-card {
      background: rgba(255,255,255,0.06);
      backdrop-filter: blur(6px);
      padding: 2.2rem;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.35);
      transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

    .info-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 18px 45px rgba(0,0,0,0.45);
    }

    .info-card h3 {
      margin-bottom: 1rem;
      color: #ffdedf;
      font-size: 1.4rem;
    }

    .info-card p {
      color: #ffdede;
      line-height: 1.7rem;
    }

    /* ===== FOOTER ===== */
    footer {
      text-align: center;
      padding: 1.5rem;
      background: #050505;
      color: #ffdede;
      font-size: 0.9rem;
    }

    /* ===== LIGHT MODE ===== */
    body.light-theme {
      background: #ffffff;
      color: #000;
    }

    body.light-theme header {
      background: rgba(255,255,255,0.7);
    }

    body.light-theme .nav a,
    body.light-theme #theme-toggle {
      color: #000;
      border-color: #000;
    }

    body.light-theme .hero-section {
      background: linear-gradient(to bottom right, #f0f0f0, #ffffff);
    }

    body.light-theme .info-section {
      background: #f5f5f5;
    }

    body.light-theme .info-card {
      background: rgba(255,255,255,0.9);
      color: #000;
    }

    body.light-theme .info-card p {
      color: #333;
    }

    body.light-theme footer {
      background: #eaeaea;
      color: #000;
    }
  </style>
</head>

