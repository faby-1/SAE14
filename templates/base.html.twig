        <link id="theme-style" rel="stylesheet" href="{{ asset('css/theme-light.css') }}">

        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}
            <script src="{{ asset('/theme_js') }}"></script>

            {% endblock %}
        {% endblock %}

    </head>
    <body>
        {% block body %}

        {% endblock %}
    </body>
</html>
